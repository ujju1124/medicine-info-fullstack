{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.js", 
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["node_modules/tesseract.js/**"]
      }
    },
    { "src": "docs/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "docs/$1" }
  ]
}
